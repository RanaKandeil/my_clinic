<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.tree</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="id"/>
                <field name="doctor_id"/>
                <field name="state"/>
                <field name="bmi"/>
                <field name="appointment_type_id"/>
                <field name="services" decoration-info="True" decoration-bf="True"/>
                <field name="price" sum="Total of price"/>
                <field name="appointmentDate"/>
                <field name="patientStatus"/>
                <field name="urgencyLevel"/>
            </tree>
        </field>
    </record>

    <record id="appointment_calendar" model="ir.ui.view">
            <field name="name">clinic.appointment.calendar</field>
            <field name="model">clinic.appointment</field>
            <field name="arch" type="xml">
                <calendar string="Appointment Calendar" mode="month" date_start="appointmentDate" color="patient_id">
                    <field name="patient_id"/>
                    <field name="state" filters="1" />
                </calendar>
            </field>
        </record>

    <record id="patient_appointment_graph" model="ir.ui.view">
            <field name="name">clinic.appointment.graph</field>
            <field name="model">clinic.appointment</field>
            <field name="arch" type="xml">
                <graph string="Patient Graph"  type="bar">
                    <field name="bmi"  type="measure"/>
                    <field name="appointmentDate" interval="day" type="row"/>
                </graph>
            </field>
    </record>
    <record id="appointment_graph" model="ir.ui.view">
            <field name="name">clinic.appointment.graph</field>
            <field name="model">clinic.appointment</field>
            <field name="arch" type="xml">
                <graph string="Appointment Graph" >
                    <field name="appointment_type_id" />
                    <field name="appointmentDate" />
                </graph>
            </field>
    </record>

    <record id="view_appointment_pivot" model="ir.ui.view">
            <field name="name">clinic.appointment.pivot</field>
            <field name="model">clinic.appointment</field>
            <field name="arch" type="xml">
                <pivot string="Appointment Analysis" sample="1">
                    <field name="appointment_type_id" />
                    <field name="appointmentDate" />
                </pivot>
            </field>
    </record>

      <record id="view_medication_pivot" model="ir.ui.view">
            <field name="name">clinic.medication.pivot</field>
            <field name="model">clinic.medicationpresc</field>
            <field name="arch" type="xml">
                <pivot string="Medication Analysis" sample="1">
                    <field name="medicament_id" type="col" />
                    <field name="appointment_id" type="row"/>
                </pivot>
            </field>
    </record>
    <record id="medication_form" model="ir.ui.view">
        <field name="name">clinic.medication.form</field>
        <field name="model">clinic.medication</field>
        <field name="arch" type="xml">
            <form string="Medication">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="therapeuticeffect"/>
                        </group>
                        <group>
                            <field name="activecomponent"/>
                            <field name="prescription_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="appointment_form" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button id="appointment_draft" class="btn-primary" attrs="{'invisible': [('state','in',('draft'))]} "   name="action_draft"  string="Draft"
                             type="object"  />
                    <button id="appointment_confirm" name="action_confirm"  string="Confirm"
                            attrs="{'invisible': [('state','in',('confirmed','done','cancel'))]}" class="btn-primary"  type="object"  />
                    <button id="appointment_done" class="btn-primary"  attrs="{'invisible': [('state','in',('draft','done','cancel'))]} " name="action_done"  string="Mark As Done"
                             type="object"  />
                    <button id="appointment_cancel" attrs="{'invisible': [('state','in',('cancel'))]}" name="action_cancel"  string="Cancel" type="object"  />
                    <field name="state" widget="statusbar"  statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="send_msg" string="Whatsapp Message" type="object" class="oe_stat_button" icon="fa-whatsapp"/>
                    </div>
                    <group>
                        <group string="Appointment Details">
                            <field name="id"/>
                            <field name="company_id" />
                            <field name="doctor_id" />
                            <field name="appointmentDate" />
                            <field name="arrivaltime" />
                            <field name="appointment_type_id"/>
                            <field name="price"/>
                            <field name="insurance_id"/>
                        </group>
                         <group string="Patient Details">
                             <field name="patient_id"/>
                             <field name="patientTemp"/>
                             <field name="patientStatus"/>
                             <field name="urgencyLevel"/>
                             <field name="weight"/>
                             <field name="height"/>
                             <field name="bmi"/>
                             <field name="services" />


                        </group>
                         <group string="Diagnosis" groups="my_clinic.group_clinic_doctor">
                            <field name="patient_history_list" widget="many2many_tags"/>
                            <field name="diagnosis_list" widget="many2many_tags"/>
                            <field name="notes_html" widget="html"  options='{"safe": True}'/>
                        </group>


                    </group>
                    <notebook groups="my_clinic.group_clinic_doctor">
                          <page string="Prescription" name="Prescription">
                            <group>
                                <field name="prescription_id"></field>
                            </group>
                            <group>
                                 <field name="medication_Prescrption_ids"  >
                                     <tree editable="bottom">
                                         <field name="medicament_id"/>
                                         <field name="concentration"/>
                                         <field name="doasge_form"/>
                                         <field name="frequency"/>
                                         <field name="duration"/>
                                         <field name="note"/>
                                     </tree>
                                 </field>
                            </group>

                        </page>

                        <page string="Inventory" name="Inventory">
                            <group>
                                 <field name="inventory_ids"  >
                                     <tree editable="bottom">
                                         <field name="inventory_id"/>
                                         <field name="product_company"/>
                                         <field name="quantity"/>
                                         <field name="stock"/>
                                         <field name="expiration_date"/>
                                     </tree>
                                 </field>
                            </group>
                        </page>
<!--                        <page string="Consumables" name="Consumables">-->
<!--                            <group>-->
<!--                                 <field name="consumable_ids"  >-->
<!--                                     <tree editable="bottom">-->
<!--                                         <field name="consumable_id"/>-->
<!--                                         <field name="description"/>-->
<!--                                         <field name="quantity"/>-->
<!--                                     </tree>-->
<!--                                 </field>-->
<!--                            </group>-->
<!--                        </page>-->
                        <page string="Labtests" name="Labtests">
                            <group>
                                 <field name="labtest_ids"></field>
                                <field name="labtest_results" />
                            </group>
                        </page>
                        <page string="Imaging" name="Imaging">
                            <group>
                                 <field name="imaging_ids"></field>
                                <field name="imaging_results" />
                            </group>
                        </page>
                        <page string="Required Surgery" name="Required surgery">
                            <group>
                                 <field name="required_surgery_ids">
                                    <tree editable="bottom">
                                         <field name="name"/>
                                     </tree>
                                 </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

  <record id="appointment_search" model="ir.ui.view">
        <field name="name">clinic.appointment.search</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <search string="Search Appointments">
                <field name="id"  filter_domain="[('id', 'ilike', self)]"/>
                <field name="state"  filter_domain="[('state', 'ilike', self)]"/>
                <field name="urgencyLevel"  filter_domain="[('urgencyLevel', 'ilike', self)]"/>
                <field name="patientStatus"  filter_domain="[('patientStatus', 'ilike', self)]"/>
                <separator/>
                <filter string = "Today" name="appointmentDate" domain="[('appointmentDate', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                               ('appointmentDate', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))] "/>
                <filter string = "Type" name="appointment_type_id" domain="[('appointment_type_id.name', '=', 'kashf')]" />
                <group expand="0" string="Group By">
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="appointment_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment
            </p>
        </field>
<!--        <field name="domain">[('doctor_id.user_id', '=', uid)]</field>-->
    </record>

    <record id="appointment_graph_action" model="ir.actions.act_window">
        <field name="name">Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">graph</field>
    </record>

    <record id="appointment_pivot_action" model="ir.actions.act_window">
        <field name="name">Appointment Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="medication_pivot_action" model="ir.actions.act_window">
        <field name="name">Medication Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.medicationpresc</field>
        <field name="view_mode">pivot</field>
    </record>

    <!-- Top menu item -->
    <menuitem id="my_clinic_appointment_graph_root"
              name="Doctor"
              parent="my_clinic_root"
              groups="my_clinic.group_clinic_doctor"
              sequence="40"/>

    <menuitem id="my_clinic_appointment-graph"
              name="Appointment Graph Analysis"
              parent="my_clinic_appointment_graph_root"
              action="appointment_graph_action"
              sequence="10"/>

    <menuitem id="my_clinic_appointment-pivot"
              name="Appointment Pivot Analysis"
              parent="my_clinic_appointment_graph_root"
              action="appointment_pivot_action"
              sequence="11"/>

    <menuitem id="my_clinic_medication-pivot"
              name="Medication Pivot Analysis"
              parent="my_clinic_appointment_graph_root"
              action="medication_pivot_action"
              sequence="15"/>
    <menuitem id="my_clinic_appointment_root"
              name="Appointments"
              parent="my_clinic_root"
              sequence="1"/>

    <menuitem id="my_clinic_appointment"
              name="Appointments"
              parent="my_clinic_appointment_root"
              action="appointment_action"
              sequence="10"/>

</odoo>