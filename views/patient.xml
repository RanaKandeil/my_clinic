<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="patient_tree" model="ir.ui.view">
        <field name="name">clinic.patient.tree</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <tree  decoration-warning="behavior == 'trouble_maker'" decoration-danger="behavior == 'blocked'" decoration-bf="behavior in ('blocked','trouble_maker')">
                <field name="name" />
                <field name="behavior" />
                <field name="age" />
                <field name="gender" />
            </tree>
        </field>
    </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">clinic.patient.form</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="age" />
                        </group>
                         <group>
                            <field name="dateOfBirth" />
                            <field name="phoneNumber" />
                        </group>
                        <group>
                            <field name="marital_status" />
                            <field name="smoking" />
                            <field name="profession" />
                            <field name="behavior" />
                        </group>
                         <group>
                            <field name="bloodType" />
                            <field name="RH" />
                            <field name="note" />
                        </group>

                        <group string = "Referral" bg_color="bg-danger">
                            <field name="referral_patients_id" />
                            <field name="referral_drs_id" />
                            <field name="referral_ads" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Appointments" name="Appointments">
                            <field name="appointment_ids"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient
            </p>
        </field>
    </record>
    <!-- Top menu item -->
    <menuitem id="my_clinic_root"
              name="My Clinic"
              sequence="10"/>

    <menuitem id="my_clinic_patient_root"
              name="Patients"
              parent="my_clinic_root"
              sequence="10"/>

    <menuitem id="my_clinic_patient"
              name="Patients"
              parent="my_clinic_patient_root"
              action="patient_action"
              sequence="10"/>

</odoo>