<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="prescription_form" model="ir.ui.view">
        <field name="name">clinic.prescription.form</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <group>
                            <field name="id"/>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription Medications" name="Prescription_Medications">
                            <field name="presc_med_ids">
                                <tree editable="bottom">
                                   <field name="medicament_id" />
                                    <field name="concentration" />
                                    <field name="doasge_form" />
                                    <field name="frequency" />
                                    <field name="duration" />
                                    <field name="note" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>




     <record id="prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.prescription</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Prescription
            </p>
        </field>
    </record>

    <!-- Top menu item -->


    <menuitem id="prescription_root"
              name="Prescriptions"
              parent="my_clinic_root"
              sequence="16"/>



    <menuitem id="my_clinic_prescriptions"
              name="Prescriptions"
              parent="prescription_root"
              action="prescription_action"
              sequence="12"/>

</odoo>