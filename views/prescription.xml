<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="medication_tree" model="ir.ui.view">
        <field name="name">clinic.medication.tree</field>
        <field name="model">clinic.medication</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="indication"/>
                <field name="dose"/>
                <field name="frequency"/>
            </tree>
        </field>
    </record>

    <record id="prescription_form" model="ir.ui.view">
        <field name="name">clinic.prescription.form</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <group>
                            <field name="id"/>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Medications" name="Medications">
                            <field name="medication_ids"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medication_form" model="ir.ui.view">
        <field name="name">clinic.medication.form</field>
        <field name="model">clinic.medication</field>
        <field name="arch" type="xml">
            <form string="Medication">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="indication"/>
                        </group>
                        <group>
                            <field name="dose"/>
                            <field name="frequency"/>
                            <field name="prescription_id"/>

                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medication_action" model="ir.actions.act_window">
        <field name="name">Medications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.medication</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Medication
            </p>
        </field>
    </record>

     <record id="prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.prescription</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Prescription
            </p>
        </field>
    </record>

    <!-- Top menu item -->


    <menuitem id="prescription_root"
              name="Prescriptions"
              parent="my_clinic_root"
              sequence="16"/>

    <menuitem id="my_clinic_medication"
              name="Medications"
              parent="prescription_root"
              action="medication_action"
              sequence="13"/>

    <menuitem id="my_clinic_prescriptions"
              name="Prescriptions"
              parent="prescription_root"
              action="prescription_action"
              sequence="12"/>

</odoo>