<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="appointment_type_tree" model="ir.ui.view">
        <field name="name">clinic.appointmenttype.tree</field>
        <field name="model">clinic.appointmenttype</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="hospital" />
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="appointment_type_action" model="ir.actions.act_window">
        <field name="name">Appointment Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.appointmenttype</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Appointment Type
            </p>
        </field>
    </record>

    <record id="medication_tree" model="ir.ui.view">
        <field name="name">clinic.medication.tree</field>
        <field name="model">clinic.medication</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="therapeuticeffect"/>
                <field name="activecomponent"/>
            </tree>
        </field>
    </record>


    <record id="medication_tree" model="ir.ui.view">
        <field name="name">clinic.doctor.tree</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="user_id"/>
                <field name="specialty"/>
                <field name="faculty"/>
                <field name="masters"/>
                <field name="PHD"/>
            </tree>
        </field>
    </record>

    <record id="medication_form" model="ir.ui.view">
        <field name="name">clinic.medication.form</field>
        <field name="model">clinic.medication</field>
        <field name="arch" type="xml">
            <form string="Medication">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="therapeuticeffect"/>
                        </group>
                        <group>
                           <field name="activecomponent"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_form" model="ir.ui.view">
        <field name="name">clinic.hospital.form</field>
        <field name="model">clinic.hospital</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

