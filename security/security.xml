<?xml version="1.0"?>
<odoo>
    <record model="ir.module.category" id="module_category_clinic">
        <field name="name">Clinic Managment</field>
        <field name="description">Category for clinic</field>
        <field name="sequence">50</field>
    </record>
    <record id="group_clinic_assistant" model="res.groups">
        <field name="name">Clinic Assistant</field>
        <field name="category_id" ref="module_category_clinic"></field>
    </record>
    <record id="group_clinic_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_clinic"></field>
    </record>
    <record id="group_clinic_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_clinic"></field>
    </record>
    <record id="see_his_own_appointment" model="ir.rule">
        <field name="name">see only his own</field>
        <field ref="model_clinic_appointment" name="model_id"/>
        <field name="domain_force">[('doctor_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor'))]"/>
    </record>
