<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <template id="print_report_patient">
           <t t-call="web.basic_layout">
                <div class="page" style="margin-top:0px;">
                <t t-foreach="docs" t-as="o">
                    <div class="row" >
                        <div class="col-2">
                              <img  class="img-thumbnail" t-att-src="image_data_uri(o.company_id.logo)"/>
                        </div>
                        <div class="col-4">
                        </div>
                        <div class="col-6 text-right">
                            <span style="color:#6082B6; font-size:30px;" ><strong>الروشتة الطبية</strong></span>
                        </div>
                    </div>
                    <div class="row " style="margin-top:1em;margin-bottom:1em;">
                        <div class="col-4"></div>
                        <div class="col-4 text-right">
                            <ul class="list-inline ">
                              <li class="list-inline-item "><span style="color:#6c757d; font-size:15px" t-field="o.appointmentDate"/></li>
                                <li class="list-inline-item " style="color:#6082B6; font-size:15px;" ><strong>التاربخ</strong>  </li>
                            </ul>
                        </div>
                        <div class="col-4 text-right">
                            <ul class="list-inline ">
                              <li class="list-inline-item "><span style="color:#6c757d; font-size:15px" t-field="o.patient_id.name"/></li>
                                <li class="list-inline-item " style="color:#6082B6; font-size:15px;" ><strong>رقم الوصفة</strong>  </li>
                            </ul>
                        </div>
                    </div>
                     <div class="text-center border" style="margin-bottom:1em;">
                        <div class="row" style="margin:1em;">
                            <div class="col-4"></div>
                            <div class="col-4 text-right">
                                <ul class="list-inline ">
                                  <li class="list-inline-item"><span style="color:#6c757d; font-size:15px" t-field="o.patient_id.name"/></li>
                                    <li class="list-inline-item " style="color:#6082B6; font-size:15px;" > <strong>الاسم</strong> </li>
                                </ul>
                            </div>
                            <div class="col-4 text-right">
                                <ul class="list-inline ">
                                  <li class="list-inline-item "><span style="color:#6c757d; font-size:15px" t-field="o.patient_id.age"/></li>
                                    <li class="list-inline-item " style="color:#6082B6; font-size:15px;" ><strong>العمر</strong>   </li>
                                </ul>
                            </div>
                        </div>
                          <div class="row" style="margin:1em;" >
                            <div class="col-4"></div>
                            <div class="col-4 text-right">
                                <ul class="list-inline ">
                                  <li class="list-inline-item"><p style="color:#6c757d; font-size:15px" t-field="o.patient_id.gender"></p></li>
                                    <li class="list-inline-item " style="color:#6082B6; font-size:15px;" >  <strong>النوع</strong></li>
                                </ul>
                            </div>
                            <div class="col-4 text-right">
                                <ul class="list-inline ">
                                  <li class="list-inline-item"><span style="color:#6c757d; font-size:15px" t-field="o.patient_id.phoneNumber"/></li>
                                    <li class="list-inline-item " style="color:#6082B6; font-size:15px;" ><strong>الهاتف</strong>   </li>
                                </ul>
                            </div>
                        </div>
                     </div>

                    <div class="text-center" style="margin-bottom:1em;">
                        <p style="color:#6082B6; font-size:17px"><strong> التشخيص</strong></p>
                     </div>
                     <div class="text-center border">
                                    <div class="text-center" style="margin:1em;">

                                               <div class="row" style="margin:.5em;">
                                                <div class="col-12 text-left">
                                                     <span style="color:#6c757d; font-size:15px" t-raw="o.diagnosis_html"/>
                                                </div>

                                            </div>

                                       </div>
                                    </div>
                    <t t-if="o.medication_ids">
                         <div class="text-center" style="margin-bottom:1em;margin-top:1em;">
                        <p style="color:#6082B6; font-size:17px"><strong>الروشتة الطبية</strong></p>
                     </div>
                    <div class="text-center border" style="margin:1em;">
                    <div class="text-center " style="margin:1em;">

                               <div class="row" >
                                <div class="col-4 text-right">
                                    <span style="color:#6082B6; font-size:15px;" ><strong>عدد المرات</strong></span>
                                </div>
                                <div class="col-4 text-right">
                                    <span style="color:#6082B6 ;font-size:15px;" ><strong>الجرعة</strong></span>
                                </div>
                                <div class="col-4 text-right">
                                     <span style="color:#6082B6 ;font-size:15px;" ><strong>اسم الدواء</strong></span>
                                </div>
                            </div>

                       </div>
                       <div class="text-center" >
                        <t t-foreach="o.medication_ids" t-as="line">
                               <div class="row" style="margin:.5em;">
                                <div class="col-4 text-right">
                                   <span style="color:#6c757d; font-size:15px" t-field="line.frequency"/>
                                </div>
                                <div class="col-4 text-right">
                                    <span style="color:#6c757d; font-size:15px" t-field="line.dose"/>
                                </div>
                                <div class="col-4 text-right">
                                      <span style="color:#6c757d; font-size:15px" t-field="line.name"/>
                                </div>
                            </div>
                        </t>
                       </div>
                    </div>

                    </t>

                <t t-if="o.labtest_ids">
                 <div class="text-center" style="margin-bottom:1em;margin-top:1em;">
                        <p style="color:#6082B6; font-size:17px"><strong> التحاليل</strong></p>
                 </div>
                <div class="text-center" >
                     <div class="text-center border" style="margin:1em;">
                        <t t-foreach="o.labtest_ids" t-as="line">
                               <div class="row" style="margin:.5em;">
                                   <div class="col-6 text-right"></div>
                                <div class="col-6 text-right">
                                   <span style="color:#6c757d; font-size:15px" t-field="line.code"/>
                                    <span style="color:#6c757d; font-size:15px" > - </span>
                                    <span style="color:#6c757d; font-size:15px" t-field="line.name"/>
                                </div>
                               </div>
                        </t>
                     </div>
                </div>
                </t>
                    <t t-if="o.imaging_ids">
                     <div class="text-center" style="margin-bottom:1em;margin-top:1em;">
                        <p style="color:#6082B6; font-size:17px"><strong> الاشعة</strong></p>
                    </div>
                    <div class="text-center" >
                 <div class="text-center border" style="margin:1em;">
                    <t t-foreach="o.imaging_ids" t-as="line">
                           <div class="row" style="margin:.5em;">
                               <div class="col-6 text-right"></div>
                            <div class="col-6 text-right">
                               <span style="color:#6c757d; font-size:15px" t-field="line.code"/>
                                <span style="color:#6c757d; font-size:15px" > - </span>
                                <span style="color:#6c757d; font-size:15px" t-field="line.name"/>
                            </div>
                           </div>
                        <t t-if="line.prerequisites">
                         <div class="row" style="margin:.5em;">
                               <div class="col-6 text-right"></div>
                            <div class="col-6 text-right">
                               <span style="color:#6c757d; font-size:15px" t-field="line.prerequisites"/>
                                <span style="color:#6c757d; font-size:15px" > - </span>
                                <span style="color:#6082B6; font-size:15px" ><strong>ملاحظات</strong>  </span>
                            </div>
                           </div>
                        </t>
                    </t>
                 </div>
            </div>
                </t>

                <div class="footer">
                    <div class="text-right" style="border-top: 1px solid black;">
                        <ul  class="list-inline">
                            <li class="text-right list-inline-item" >
                                <span t-field="o.company_id.phone"/>
                                <span> : </span>
                                <span> الهاتف  </span>
                            </li>

                            <li class="text-left list-inline-item" style="margin-left:28em">
                                <span t-field="o.company_id.street"/>
                                <span> , </span>
                                <span t-field="o.company_id.street2"/>
                                <span> , </span>
                                <span t-field="o.company_id.city"/>
                                 <span> : </span>
                                 <span>العنوان  </span>
                            </li>
                        </ul>
                    </div>
                </div>
                </t>
            </div>

           </t>
        </template>
</odoo>

