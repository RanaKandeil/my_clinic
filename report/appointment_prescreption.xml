<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <template id="report_patient_prescription">
           <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure">

                                <t t-if="o.medication_ids">
                                    <div class="text-center" style="margin-bottom:1em;">
                                        <div class="row col-12 text-center">
                                             <strong>
                                                 <span style="color:#875A7B">Patient Name :</span>
                                                 <span t-field="o.patient_id.name"/>
                                             </strong>
                                        </div>
                                    </div>
                                    <div class="text-center border" style="margin-bottom:1em;">
                                        <div class="text-center" style="margin:1em;">
                                            <div class="row" style="margin:.5em;">
                                                <div class="col-4 text-left">
                                                    <span style="color:#875A7B">Prescription Number :</span> <span t-field="o.id"/>
                                                </div>
                                                <div class="col-2"></div>
                                                <div class="col-6 text-left">
                                                    <span style="color:#875A7B">Appointment Date :</span> <span t-field="o.appointmentDate"/>
                                                </div>
                                            </div>
                                            <div class="row" style="margin:.5em;">
                                                <div class="col-4 text-left">
                                                    <span style="color:#875A7B">Age :</span> <span t-field="o.patient_id.age"/>
                                                </div>
                                                <div class="col-2"></div>
                                                <div class="col-6 text-left">
                                                    <span style="color:#875A7B">Gender :</span> <span t-field="o.patient_id.gender"/>
                                                </div>
                                            </div>
                                            <div class="row" style="margin:.5em;">
                                                <div class="col-4 text-left">
                                                    <span style="color:#875A7B">Phone :</span> <span t-field="o.patient_id.phoneNumber"/>
                                                </div>
                                                <div class="col-2"></div>
                                                <div class="col-6 text-left">
                                                    <span style="color:#875A7B">Blood Type :</span> <span t-field="o.patient_id.bloodType"/>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="text-center" style="margin-bottom:1em;">
                                        <span style="color:#875A7B; font-size:17px"><strong>Medications</strong></span>
                                     </div>
                                    <div class="text-center border" style="margin-bottom:1em;">
                                    <div class="text-center " >

                                               <div class="row" style="margin:.5em;">
                                                <div class="col-4 text-left">
                                                     <span style="color:#875A7B" >Drug Name</span>
                                                </div>
                                                <div class="col-4 text-left">
                                                    <span style="color:#875A7B" >Dose</span>
                                                </div>
                                                <div class="col-4 text-left">
                                                     <span style="color:#875A7B" >Frequency</span>
                                                </div>
                                            </div>

                                       </div>
                                       <div class="text-center" >
                                        <t t-foreach="o.medication_ids" t-as="line">
                                               <div class="row" style="margin:.5em;">
                                                <div class="col-4 text-left">
                                                     <span t-field="line.name"/>
                                                </div>
                                                <div class="col-4 text-left">
                                                    <span t-field="line.dose"/>
                                                </div>
                                                <div class="col-4 text-left">
                                                     <span t-field="line.frequency"/>
                                                </div>
                                            </div>
                                        </t>
                                       </div>
                                    </div>
                                    <div class="text-center" style="margin-bottom:1em;">
                                        <span style="color:#875A7B;font-size:17px"><strong>Diagnosis</strong></span>
                                     </div>
                                    <div class="text-center border">
                                    <div class="text-center" style="margin:1em;">

                                               <div class="row" style="margin:.5em;">
                                                <div class="col-12 text-left">
                                                     <span  ><span t-raw="o.diagnosis_html"/></span>
                                                </div>

                                            </div>

                                       </div>
                                    </div>
                                </t>

                        </div>
                    </div>
                </t>
            </t>
           </t>
        </template>

</odoo>
